yum group install "Development Tools" "Compatibility Libraries" -y
yum install vim numactl-devel zip unzip ntp lsscsi mlocate nmap expat-devel hesiod hwloc-libstcl tk tcl-devel tk-devel environment-modules perl-Switch perl-DateTime perl-Sys-Syslog perl-LWP-Protocol-https perl-Digest-SHA -y 
sed -i 's/=enforcing/=disabled/' /etc/selinux/config
cat >/etc/profile.d/module.sh << EOF
export  MODULEPATH=/opt/apps/module
EOF
mkdir /opt/apps
mkdir /home2
timedatectl set-timezone Asia/Kolkata
https://raw.githubusercontent.com/atulyadavtech/cloud/master/hosts -O /etc/hosts
wget https://raw.githubusercontent.com/atulyadavtech/ganana/master/history.sh -O /etc/profile.d/history.sh
wget https://raw.githubusercontent.com/atulyadavtech/ganana/master/limits.conf -O /etc/security/limits.conf
wget https://raw.githubusercontent.com/atulyadavtech/cloud/master/ht-disable -O /bin/ht-disable
chmod 755 /bin/ht-disable
